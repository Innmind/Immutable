                Entry::markdown(
                    'Set',
                    Path::of('SET.md'),
                ),
                Entry::markdown(
                    'Map',
                    Path::of('MAP.md'),
                ),
                Entry::markdown(
                    'Str',
                    Path::of('STR.md'),
                ),
                Entry::markdown(
                    'RegExp',
                    Path::of('REGEXP.md'),
                ),
                Entry::markdown(
                    'Maybe',
                    Path::of('MAYBE.md'),
                ),
                Entry::markdown(
                    'Either',
                    Path::of('EITHER.md'),
                ),
            )->alwaysOpen(),
            Entry::markdown(
                'Blackbox',
                Path::of('BLACKBOX.md'),
